

<div class="row">
  <div class="col-md-9 text-center">
    <%= image_tag(@idea.picture_url, style: "width: 500px;") if @idea.picture.present? %>
  </div>

  <div class="col-md-3">
    <p><b>Name: </b><%= @idea.name %></p>
    <p><b>Description: </b><%= @idea.description %></p>
    <p>
      <%= link_to 'Edit', edit_idea_path(@idea), class: "btn btn-warning" %> |
      <%= link_to 'Destroy', @idea, data: { confirm: 'Are you sure?' }, method: :delete, class: "btn btn-danger" %> |
      <%= link_to 'Back', ideas_path, class: "btn btn-info" %>
    </p>
  </div>
</div>
<h3>Comments</h3>
<% @comments.each do |comment| %>
    <div class="row" style="margin-bottom: 30px;">
      <div class="col-sm-offset-2 col-sm-3">
        <span style="color: #f31818;"><%= comment.user_name %></span>
      </div>
      <div class="col-sm-offset-2 col-sm-3">
        <%= link_to 'Delete', comment_path(comment), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
      </div>
      <div class="col-sm-offset-2 col-sm-12"><%= comment.body %></div>
      <div class="col-sm-offset-2 col-sm-12"><%= image_tag(comment.picture_url, style: "width: 300px;")%></div>
    </div>
  <% end %>
<%= render partial: 'comments/form', locals: { comment: @comment } %>