<%= form_with(model: comment, local: true, class: "form-horizontal") do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :user_name, class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= form.text_field :user_name, id: :comment_user_name, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= form.label :body, class: "control-label col-sm-2" %>
    <div class="col-sm-10"> 
      <%= form.text_area :body, id: :comment_body, class: "form-control" %>
    </div>
  </div>
  <%= form.hidden_field :idea_id %>
  
  <div class="form-group">
    <%= form.label :picture, class: "control-label col-sm-2" %>
    <div class="col-sm-10"> 
      <%= form.file_field :picture %>
    </div>
  </div>
  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
       <%= form.submit class:"btn btn-success" %>
    </div>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>
<% end %>
